{
  "name": "av-lilybird-discord-bot",
  "description": "A custom discord bot",
  "version": "0.0.1",
  "type": "module",
  "main": "./src/index.ts",
  "scripts": {
    "clean": "rm -rf ./dist",
    "dev": "bun ./ci.ts --watch",
    "start": "bun .",
    "lint": "eslint \"src/**/*.ts\"",
    "check": "eslint \"src/**/*.ts\" --fix",
    "postinstall": "bun prepare:prisma",
    "prepare:prisma": "prisma generate"
  },
  "dependencies": {
    "@lilybird/handlers": "^0.2.1",
    "@linear/sdk": "^13.0.0",
    "@prisma/client": "^5.7.1",
    "@supabase/supabase-js": "^2.39.1",
    "lilybird": "^0.4.1",
    "prisma": "^5.7.1",
    "tasai": "^0.1.0"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin": "^1.5.1",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "bun-types": "latest",
    "eslint": "^8.56.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "typescript": "^5.3.3"
  },
  "prisma": {
    "schema": "database/schema.prisma"
  }
}
