{
    "compilerOptions": {
        "target": "ESNext",
        "module": "Node16",
        "moduleResolution": "Node16",
        "outDir": "dist",
        "baseUrl": ".",
        "strict": true,
        "types": [
            "bun-types",
            "./types/bun.d.ts",
            "./types/lilybird.d.ts",
            "./types/lock.d.ts",
            "./types/logger.d.ts",
            "./types/support.d.ts",
        ],
        "paths": {
            "@constants/*": [
                "./constants/*"
            ],
            "@database": [
                "./database/index.ts"
            ],
            "@utils": [
                "./utils/index.ts"
            ]
        },
    },
    "include": [
        "constants/**/*",
        "database/**/*",
        "src/**/*",
        "tests/**/*",
        "utils/**/*",
        "ci.ts"
    ],
}