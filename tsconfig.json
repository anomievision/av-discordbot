{
    "compilerOptions": {
        "target": "ESNext",
        "module": "Node16",
        "moduleResolution": "Node16",
        "outDir": "dist",
        "baseUrl": ".",
        "strict": true,
        "types": [
            "bun-types",
            "./types/bun.d.ts",
            "./types/handlers.d.ts",
            "./types/lock.d.ts",
            "./types/logger.d.ts",
            "./types/support.d.ts",
        ],
        "paths": {
            "#constants/*": [
                "./constants/*"
            ],
            "#utils": [
                "./utils/index.ts"
            ]
        },
    },
    "include": [
        "constants/**/*",
        "src/**/*",
        "tests/**/*",
        "utils/**/*",
        "ci.ts"
    ],
}