{
    "compilerOptions": {
        "target": "ESNext",
        "module": "Node16",
        "moduleResolution": "Node16",
        "outDir": "dist",
        "baseUrl": ".",
        "strict": true,
        "types": [
            "bun-types",
            "./types/bun.d.ts",
        ]
    },
    "include": [
        "constants/**/*",
        "database/**/*",
        "src/**/*",
        "utils/**/*",
        "ci.ts"
    ],
    "paths": {
        "@constants/*": [
            "./constants/*"
        ],
        "@database": [
            "./src/database/index.ts"
        ],
        "@types/*": [
            "./types/*"
        ],
        "@utils": [
            "./utils/index.ts"
        ]
    },
}